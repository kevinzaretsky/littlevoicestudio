generator client { provider = "prisma-client-js" }
datasource db { provider = "sqlite"; url = env("DATABASE_URL") }

model Product { id String @id @default(cuid()) name String slug String @unique description String? priceCents Int colorOptions String[] sizeOptions String[] hasUpload Boolean @default(true) imageUrl String? createdAt DateTime @default(now()) updatedAt DateTime @updatedAt }
model Order { id String @id @default(cuid()) stripeSession String @unique amountTotal Int currency String items Json email String? shippingName String? shippingPhone String? shippingAddr Json? status String @default("pending") trackingNumber String? labelUrl String? createdAt DateTime @default(now()) }
